<UserControl x:Class="HospitalApp.WPF.Views.MedicalRecordDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalApp.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding PageTitle}" 
                           Style="{StaticResource Heading1Style}"/>
                
                <Button Grid.Column="1" 
                        Content="Back to List" 
                        Command="{Binding BackToListCommand}" 
                        Style="{StaticResource OutlineButtonStyle}"/>
            </Grid>

            <!-- Medical Record Form -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="24" 
                    BorderBrush="{StaticResource TextDisabledBrush}" 
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Basic Information Section -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Basic Information" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,0,0,16"/>

                    <!-- Patient Selection -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Patient *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Patients}" 
                                  SelectedItem="{Binding SelectedPatient}" 
                                  DisplayMemberPath="FullName" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Doctor Selection -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Doctor *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Doctors}" 
                                  SelectedItem="{Binding SelectedDoctor}" 
                                  DisplayMemberPath="FullName" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Nurse Selection -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Nurse (Optional)" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Nurses}" 
                                  SelectedItem="{Binding SelectedNurse}" 
                                  DisplayMemberPath="FullName" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Record Date -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Record Date *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <DatePicker SelectedDate="{Binding RecordDate}" 
                                    Height="36" 
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Medical Details Section -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Medical Details" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,16,0,16"/>

                    <!-- Diagnosis -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
                        <TextBlock Text="Diagnosis *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Symptoms -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
                        <TextBlock Text="Symptoms" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Symptoms, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultilineTextBoxStyle}" 
                                 MinHeight="80"/>
                    </StackPanel>

                    <!-- Treatment -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
                        <TextBlock Text="Treatment" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Treatment, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultilineTextBoxStyle}" 
                                 MinHeight="80"/>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
                        <TextBlock Text="Notes" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultilineTextBoxStyle}" 
                                 MinHeight="80"/>
                    </StackPanel>

                    <!-- Confidentiality -->
                    <CheckBox Grid.Row="8" Grid.Column="0" 
                              Content="Mark as Confidential" 
                              IsChecked="{Binding IsConfidential}" 
                              Margin="0,0,0,16"/>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="{Binding ErrorMessage}" 
                               Style="{StaticResource ErrorTextStyle}" 
                               Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               Margin="0,16,0,0"/>

                    <!-- Loading Indicator -->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="10" Grid.ColumnSpan="2" 
                          Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" 
                          Background="#80FFFFFF">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Processing..." 
                                       Style="{StaticResource BodyStyle}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="10" 
                                         Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,16,0,0">
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource OutlineButtonStyle}" 
                        Margin="0,0,8,0"/>
                
                <Button Content="Save" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
