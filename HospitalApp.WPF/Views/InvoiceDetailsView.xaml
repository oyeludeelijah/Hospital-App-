<UserControl x:Class="HospitalApp.WPF.Views.InvoiceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalApp.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding PageTitle}" 
                           Style="{StaticResource Heading1Style}"/>
                
                <Button Grid.Column="1" 
                        Content="Back to List" 
                        Command="{Binding BackToListCommand}" 
                        Style="{StaticResource OutlineButtonStyle}"/>
            </Grid>

            <!-- Invoice Form -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="24" 
                    BorderBrush="{StaticResource TextDisabledBrush}" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Basic Information Section -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Invoice Information" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,0,0,16"/>

                    <!-- Invoice Number -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Invoice Number *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding InvoiceNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"
                                 IsReadOnly="{Binding IsEditMode}"/>
                    </StackPanel>

                    <!-- Patient Selection -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Patient *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Patients}" 
                                  SelectedItem="{Binding SelectedPatient}" 
                                  DisplayMemberPath="FullName" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"
                                  IsEnabled="{Binding IsNewInvoice}"/>
                    </StackPanel>

                    <!-- Invoice Date -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Invoice Date *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <DatePicker SelectedDate="{Binding InvoiceDate}" 
                                    Height="36" 
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Due Date -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Due Date *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <DatePicker SelectedDate="{Binding DueDate}" 
                                    Height="36" 
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Status *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding StatusOptions}" 
                                  SelectedItem="{Binding Status}" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Margin="8,0,0,16">
                        <TextBlock Text="Description" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Line Items Section -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Invoice Items" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,16,0,16"/>

                    <!-- Line Items DataGrid -->
                    <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" 
                                Content="Add Item" 
                                Command="{Binding AddItemCommand}" 
                                Style="{StaticResource OutlineButtonStyle}" 
                                HorizontalAlignment="Right" 
                                Margin="0,0,0,8"/>

                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding LineItems}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False" 
                                  BorderThickness="1" 
                                  BorderBrush="{StaticResource TextDisabledBrush}" 
                                  Background="Transparent" 
                                  RowBackground="Transparent" 
                                  AlternatingRowBackground="#F5F5F5" 
                                  HeadersVisibility="Column" 
                                  GridLinesVisibility="Horizontal"
                                  MinHeight="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Actions" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Button Content="Edit" 
                                                        Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                        CommandParameter="{Binding}" 
                                                        Style="{StaticResource TextButtonStyle}" 
                                                        Margin="4,0"/>
                                                
                                                <Button Content="Remove" 
                                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                        CommandParameter="{Binding}" 
                                                        Style="{StaticResource TextButtonStyle}" 
                                                        Foreground="{StaticResource ErrorBrush}" 
                                                        Margin="4,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Totals -->
                        <Grid Grid.Row="2" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="Subtotal:" 
                                       Style="{StaticResource BodyStyle}" 
                                       Margin="0,0,16,8" 
                                       HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                       Text="{Binding Subtotal, StringFormat=C}" 
                                       Style="{StaticResource BodyStyle}" 
                                       Margin="0,0,0,8" 
                                       HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="Tax:" 
                                       Style="{StaticResource BodyStyle}" 
                                       Margin="0,0,16,8" 
                                       HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="2" 
                                       Text="{Binding Tax, StringFormat=C}" 
                                       Style="{StaticResource BodyStyle}" 
                                       Margin="0,0,0,8" 
                                       HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="Total:" 
                                       Style="{StaticResource SubheadingStyle}" 
                                       Margin="0,0,16,0" 
                                       HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="2" 
                                       Text="{Binding TotalAmount, StringFormat=C}" 
                                       Style="{StaticResource SubheadingStyle}" 
                                       Margin="0,0,0,0" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>

                    <!-- Notes -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,16,0,0">
                        <TextBlock Text="Notes" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultilineTextBoxStyle}" 
                                 MinHeight="80"/>
                    </StackPanel>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="{Binding ErrorMessage}" 
                               Style="{StaticResource ErrorTextStyle}" 
                               Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               Margin="0,16,0,0"/>

                    <!-- Loading Indicator -->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="2" 
                          Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" 
                          Background="#80FFFFFF">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Processing..." 
                                       Style="{StaticResource BodyStyle}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="10" 
                                         Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,16,0,0">
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource OutlineButtonStyle}" 
                        Margin="0,0,8,0"/>
                
                <Button Content="Save" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
