<UserControl x:Class="HospitalApp.WPF.Views.MedicalRecordListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalApp.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Medical Records" 
                   Style="{StaticResource Heading1Style}" 
                   Margin="0,0,0,16"/>

        <!-- Search and Filter -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="4" 
                    Padding="8,0" 
                    BorderBrush="{StaticResource TextSecondaryBrush}" 
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="🔍" 
                               VerticalAlignment="Center" 
                               Margin="8,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBoxStyle}" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             Padding="8" 
                             VerticalAlignment="Center" 
                             PlaceholderText="Search by patient name, diagnosis, or doctor..."/>
                </Grid>
            </Border>

            <!-- Patient Filter -->
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding Patients}" 
                      SelectedItem="{Binding SelectedPatientFilter}" 
                      DisplayMemberPath="FullName" 
                      Width="200" 
                      Margin="8,0,0,0" 
                      Height="36" 
                      VerticalContentAlignment="Center">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>

            <!-- Filter Button -->
            <Button Grid.Column="2" 
                    Content="Filter" 
                    Command="{Binding FilterCommand}" 
                    Style="{StaticResource OutlineButtonStyle}" 
                    Margin="8,0,0,0"/>

            <!-- Add New Button -->
            <Button Grid.Column="3" 
                    Content="New Medical Record" 
                    Command="{Binding AddNewRecordCommand}" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="8,0,0,0"/>
        </Grid>

        <!-- Medical Records List -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}" 
                CornerRadius="8" 
                BorderBrush="{StaticResource TextDisabledBrush}" 
                BorderThickness="1">
            <Grid>
                <DataGrid ItemsSource="{Binding MedicalRecords}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False" 
                          IsReadOnly="True" 
                          SelectionMode="Single" 
                          BorderThickness="0" 
                          Background="Transparent" 
                          RowBackground="Transparent" 
                          AlternatingRowBackground="#F5F5F5" 
                          HeadersVisibility="Column" 
                          GridLinesVisibility="Horizontal" 
                          SelectedItem="{Binding SelectedMedicalRecord}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding RecordDate, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="150"/>
                        <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="150"/>
                        <DataGridTextColumn Header="Diagnosis" Binding="{Binding Diagnosis}" Width="200"/>
                        <DataGridCheckBoxColumn Header="Confidential" Binding="{Binding IsConfidential}" Width="80"/>
                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Button Content="View" 
                                                Command="{Binding DataContext.ViewRecordCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource TextButtonStyle}" 
                                                Margin="4,0"/>
                                        
                                        <Button Content="Edit" 
                                                Command="{Binding DataContext.EditRecordCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource TextButtonStyle}" 
                                                Margin="4,0"/>
                                        
                                        <Button Content="Delete" 
                                                Command="{Binding DataContext.DeleteRecordCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource TextButtonStyle}" 
                                                Foreground="{StaticResource ErrorBrush}" 
                                                Margin="4,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Loading Indicator -->
                <Grid Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" 
                      Background="#80FFFFFF">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading..." 
                                   Style="{StaticResource BodyStyle}" 
                                   HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="10" 
                                     Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- No Results Message -->
                <TextBlock Text="No medical records found" 
                           Style="{StaticResource BodyStyle}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Visibility="{Binding HasNoResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Pagination -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,16,0,0">
            <Button Content="Previous" 
                    Command="{Binding PreviousPageCommand}" 
                    Style="{StaticResource OutlineButtonStyle}" 
                    Margin="0,0,8,0" 
                    IsEnabled="{Binding CanGoToPreviousPage}"/>
            
            <TextBlock Text="{Binding PaginationInfo}" 
                       Style="{StaticResource BodyStyle}" 
                       VerticalAlignment="Center" 
                       Margin="8,0"/>
            
            <Button Content="Next" 
                    Command="{Binding NextPageCommand}" 
                    Style="{StaticResource OutlineButtonStyle}" 
                    Margin="8,0,0,0" 
                    IsEnabled="{Binding CanGoToNextPage}"/>
        </StackPanel>
    </Grid>
</UserControl>
