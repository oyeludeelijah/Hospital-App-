<UserControl x:Class="HospitalApp.WPF.Views.PatientDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalApp.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding PageTitle}" 
                           Style="{StaticResource Heading1Style}"/>
                
                <Button Grid.Column="1" 
                        Content="Back to List" 
                        Command="{Binding BackToListCommand}" 
                        Style="{StaticResource OutlineButtonStyle}"/>
            </Grid>

            <!-- Patient Form -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="24" 
                    BorderBrush="{StaticResource TextDisabledBrush}" 
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Personal Information Section -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Personal Information" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,0,0,16"/>

                    <!-- First Name -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="First Name *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Last Name -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Last Name *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Date of Birth -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Date of Birth *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <DatePicker SelectedDate="{Binding DateOfBirth}" 
                                    Height="36" 
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Gender -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Gender *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding Gender}" 
                                  ItemsSource="{Binding GenderOptions}" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Contact Information Section -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Contact Information" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,16,0,16"/>

                    <!-- Phone Number -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Phone Number *" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Email" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
                        <TextBlock Text="Address" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultilineTextBoxStyle}" 
                                 MinHeight="60"/>
                    </StackPanel>

                    <!-- Emergency Contact -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Emergency Contact Name" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding EmergencyContactName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Emergency Contact Phone -->
                    <StackPanel Grid.Row="6" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Emergency Contact Phone" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding EmergencyContactPhone, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Medical Information Section -->
                    <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Medical Information" 
                               Style="{StaticResource Heading3Style}" 
                               Margin="0,16,0,16"/>

                    <!-- Blood Type -->
                    <StackPanel Grid.Row="8" Grid.Column="0" Margin="0,0,8,16">
                        <TextBlock Text="Blood Type" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding BloodType}" 
                                  ItemsSource="{Binding BloodTypeOptions}" 
                                  Height="36" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Has Insurance -->
                    <StackPanel Grid.Row="8" Grid.Column="1" Margin="8,0,0,16">
                        <TextBlock Text="Insurance" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <CheckBox Content="Has Insurance" 
                                  IsChecked="{Binding HasInsurance}" 
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Insurance Provider -->
                    <StackPanel Grid.Row="9" Grid.Column="0" Margin="0,0,8,16" 
                                Visibility="{Binding HasInsurance, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Insurance Provider" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding InsuranceProvider, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Insurance Number -->
                    <StackPanel Grid.Row="9" Grid.Column="1" Margin="8,0,0,16" 
                                Visibility="{Binding HasInsurance, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Insurance Number" 
                                   Style="{StaticResource BodyStyle}" 
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding InsuranceNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource StandardTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="{Binding ErrorMessage}" 
                               Style="{StaticResource ErrorTextStyle}" 
                               Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               Margin="0,16,0,0"/>

                    <!-- Loading Indicator -->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="11" Grid.ColumnSpan="2" 
                          Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" 
                          Background="#80FFFFFF">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Processing..." 
                                       Style="{StaticResource BodyStyle}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="10" 
                                         Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,16,0,0">
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource OutlineButtonStyle}" 
                        Margin="0,0,8,0"/>
                
                <Button Content="Save" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
